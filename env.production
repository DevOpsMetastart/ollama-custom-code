# Production Environment Configuration for Railway
NODE_ENV=production
PORT=3000

# CORS - Allow all origins in production for Railway deployment
# You can restrict this later by setting specific ALLOWED_ORIGINS
ALLOWED_ORIGINS=*

# Security - Use strong API key in production
API_KEY=your-production-api-key-here

# Rate Limiting - More permissive for production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Logging
LOG_LEVEL=warn
LOG_FILE=logs/app.log

# Ollama Configuration
OLLAMA_TIMEOUT=60000
OLLAMA_MAX_RETRIES=5

# Model Configuration
DEFAULT_MODEL=llama2
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2048
